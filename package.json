{
  "name": "aws-profile-switcher",
  "version": "1.0.5",
  "description": "A basic cli for switching your default aws profile in ~/.aws/credentials",
  "main": "switcher.js",
  "scripts": {
    "test": "xo && mocha"
  },
  "xo": {
    "space": true, // Spaces NOT tabs...duh
    "globals": [
      // Mocha globals
      "describe",
      "it"
    ],
    "rules": {
      "camelcase": [ "off" ], // Due to the aws credential file format
      "comma-dangle": [ "error", "always-multiline" ] // Because I like it this way
    }
  },
  "keywords": [
    "aws",
    "cli",
    "credentials",
    "profiles",
    "switching"
  ],
  "author": "devtanc",
  "license": "MIT",
  "bin": {
    "switcher": "./cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devtanc/aws-profile-switcher.git"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "prompt": "^1.0.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "mocha": "^3.2.0",
    "xo": "^0.18.1"
  }
}
